<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <tabs>
      <Tab closable="false" text="ARTWORKS">
         <content>
            <VBox>
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="600.0">
                     <children>
                        <ComboBox prefWidth="150.0" promptText="Artwork types">
                           <HBox.margin>
                              <Insets left="10.0" right="5.0" />
                           </HBox.margin>
                        </ComboBox>
                        <Button mnemonicParsing="false" text="Filtrar">
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <ScrollPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
                     <content>
                        <ListView prefHeight="400.0" prefWidth="600.0" />
                     </content>
                  </ScrollPane>
                  <Pagination prefHeight="20.0" prefWidth="600.0" />
               </children>
            </VBox>
         </content>
      </Tab>
      <Tab closable="false" text="ARTISTS">
         <content>
            <ScrollPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
               <content>
                  <VBox prefHeight="383.0" prefWidth="597.0">
                     <children>
                        <TextField fx:id="artworkId1" promptText="Artwork ID" />
                        <Button fx:id="searchArtwork1" mnemonicParsing="false" onAction="#searchArtwork" text="Buscar" />
                        <TextArea fx:id="textArea1" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </content>
      </Tab>
      <Tab closable="false" text="EXHIBITIONS">
         <content>
            <ScrollPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
               <content>
                  <VBox prefHeight="383.0" prefWidth="597.0">
                     <children>
                        <TextField fx:id="artworkId2" promptText="Artwork ID" />
                        <Button fx:id="searchArtwork2" mnemonicParsing="false" onAction="#searchArtwork" text="Buscar" />
                        <TextArea fx:id="textArea2" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </content>
      </Tab>
   </tabs>
</TabPane>
