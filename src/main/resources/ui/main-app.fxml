<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <tabs>
      <Tab closable="false" text="ARTWORKS">
         <content>
            <VBox>
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="1400.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefWidth="700.0">
                           <children>
                              <ComboBox fx:id="artworkTypesCB" prefWidth="150.0" promptText="Artwork types" />
                              <Button fx:id="filterByArtworkTypeButton" mnemonicParsing="false" text="Filter page by artwork type" />
                           </children>
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" prefWidth="700.0">
                           <children>
                              <TextField fx:id="artworkIdTF" promptText="Artwork ID" />
                              <Button fx:id="findArtworkByIdButton" mnemonicParsing="false" text="Find artwork by ID" />
                           </children>
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </HBox>
                     </children>
                  </HBox>
                  <ScrollPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="680.0" prefWidth="1400.0">
                     <content>
                        <ListView fx:id="artworkLV" prefHeight="680.0" prefWidth="1400.0" />
                     </content>
                  </ScrollPane>
                  <Pagination fx:id="artworkPagination" prefHeight="20.0" prefWidth="600.0" />
               </children>
            </VBox>
         </content>
      </Tab>
      <Tab closable="false" text="EXHIBITIONS">
         <content>
            <VBox>
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="700.0">
                     <children>
                        <TextField fx:id="exhibitionIdTF" promptText="Exhibition ID" />
                        <Button fx:id="findExhibitionByIdButton" mnemonicParsing="false" text="Find exhibition by ID" />
                     </children>
                     <VBox.margin>
                        <Insets left="5.0" />
                     </VBox.margin>
                  </HBox>
                  <ScrollPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="680.0" prefWidth="1400.0">
                     <content>
                        <ListView fx:id="exhibitionsLV" prefHeight="680.0" prefWidth="1400.0" />
                     </content>
                  </ScrollPane>
                  <Pagination fx:id="exhibitionPagination" prefHeight="20.0" prefWidth="600.0" />
               </children>
            </VBox>
         </content>
      </Tab>
   </tabs>
</TabPane>
