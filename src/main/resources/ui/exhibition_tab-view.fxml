<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="620.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefWidth="1300.0">
         <VBox.margin>
            <Insets left="5.0" />
         </VBox.margin>
         <children>
            <HBox alignment="CENTER_LEFT" prefWidth="700.0">
               <children>
                  <ToggleButton fx:id="exhibitionSortByTitleTB" mnemonicParsing="false" onAction="#sortExhibitionsPageByTitle" text="Sort page by title" />
                  <ToggleButton fx:id="exhibitionSortByGalleryTB" mnemonicParsing="false" onAction="#sortExhibitionsPageByGallery" text="Sort page by gallery">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </ToggleButton>
                  <ToggleButton fx:id="exhibitionSortByOpenDateTB" mnemonicParsing="false" onAction="#sortExhibitionsPageByOpenDate" text="Sort page by open date" />
               </children>
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="700.0">
               <children>
                  <TextField fx:id="exhibitionIdTF" promptText="Exhibition ID" />
                  <Button fx:id="findExhibitionByIdButton" mnemonicParsing="false" onAction="#findExhibitionById" text="Find exhibition by ID" />
               </children>
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </HBox>
         </children>
      </HBox>
      <ListView fx:id="exhibitionLV" prefHeight="535.0" prefWidth="1200.0" />
      <Pagination fx:id="exhibitionPagination" prefHeight="20.0" prefWidth="600.0" />
   </children>
</VBox>
